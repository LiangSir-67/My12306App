<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.order.TicketOrderPayActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单提交成功，您的订单编号为"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/tvTicketOrderPayId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20143Yq"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您现在可以办理退票或改签！"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvTicketOrderPayList"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="#F0FFFF"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="15dp"></ListView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tvTicketOrderPayCheck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="查看二维码"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>