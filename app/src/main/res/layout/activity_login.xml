<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">


    <nsu.example.cary.my12306app.utils.RoundImageView
        android:id="@+id/iv_userhead"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/user_login_head" />


    <ImageView
        android:id="@+id/iv_user_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="230dp"
        android:layout_toLeftOf="@+id/edtUsername"
        android:src="@drawable/username" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_userhead"
        android:theme="@style/MyEditText"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:hint="请输入用户名" />

    <ImageView
        android:id="@+id/iv_pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="305dp"
        android:layout_toLeftOf="@+id/edtPassword"
        android:src="@drawable/password" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUsername"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/MyEditText"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="请输入密码"/>


    <Button
        android:id="@+id/ckLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        android:text="登录"
        android:textColor="#FBFCFC"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvLostPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ckLogin"
        android:layout_alignRight="@id/ckLogin"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignBottom="@id/cb_autologin"
        android:autoLink="all"
        android:text="忘记密码？"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"/>

    <CheckBox
        android:id="@+id/cb_autologin"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckLogin"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="自动登录"
        android:textSize="20sp"/>


</RelativeLayout>
